{
  "compilerOptions": {
    "module": "ES2015",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es7", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
