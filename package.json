{
    "name": "@meetio/scheme-generator",
    "version": "0.2.0",
    "description": "Easily generate themes for Sublime Text",
    "main": "dist/index.js",
    "typescript": {
        "definition": "index.d.ts"
    },
    "files": [
        "dist/**/*.js",
        "dist/**/*.d.ts"
    ],
    "types": "dist/index",
    "bugs": {
        "url": "https://github.com/meetio-theme/scheme-generator/issues"
    },
    "author": "Mauro Reis Vieira <mauroreisvieira@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "generate": "tsc demo/generate.ts",
        "generate:scheme": "node demo/generate.js",
        "prettier": "prettier --write \"src/*.ts?(x)\"",
        "lint": "eslint \"src/*.ts\" \"src/**/*.ts\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@babel/core": "7.4.5",
        "@babel/preset-env": "7.4.5",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "2.15.0",
        "@typescript-eslint/parser": "2.15.0",
        "babel-eslint": "^10.0.3",
        "eslint": "6.8.0",
        "husky": "^4.2.1",
        "prettier": "^1.18.2",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "@types/node": "^13.7.1"
    }
}
